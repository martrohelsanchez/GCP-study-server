{
  "compilerOptions": {
    "strict": true,
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": [
      "@types",
      "../node_modules/@types"
    ],
  },
  "exclude": [
    "**/__mocks__",
    "**/*.test.ts",
    "dist",
    "node_modules",
  ],
}